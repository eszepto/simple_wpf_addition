        <TextBox x:Name="TextX" PreviewTextInput="NumberValidationTextBox" HorizontalAlignment="Left" Height="37" TextWrapping="Wrap" VerticalAlignment="Top" Width="154" Margin="93,1,0,0" FontSize="16" Grid.Row="1"   />
        <TextBox x:Name="TextY" PreviewTextInput="NumberValidationTextBox" HorizontalAlignment="Left" Height="37" TextWrapping="Wrap" VerticalAlignment="Top" Width="154" Margin="93,58,0,0" FontSize="16" Grid.Row="1"/>
        <Label x:Name="LabelAnswer"  Content="Answer :" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,150,0,0" Grid.Row="1" FontSize="18" Height="37" Width="84"/>
        <TextBox x:Name="TextAnswer" IsReadOnly="True"  HorizontalAlignment="Left" Height="36" TextWrapping="Wrap" VerticalAlignment="Top" Width="220" Margin="99,151,0,0" Grid.Row="1" FontSize="18"/>
        <Label x:Name="LabelError" Content="" Foreground="#FF7472" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="99,120,0,0" Width="154"/>

    </Grid>
</Window>
