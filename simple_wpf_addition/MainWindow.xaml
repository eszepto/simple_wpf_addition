        xmlns:local="clr-namespace:simple_wpf_addition"
        mc:Ignorable="d"
        Title="Simple_wpf_addition" Height="281.299" Width="493.701">
    <Grid Height="227" VerticalAlignment="Top" Margin="0,10,0,0">


        <Button x:Name="ButtonEnter" Content="Enter" HorizontalAlignment="Left" VerticalAlignment="Top" Width="88" Margin="293,2,0,0" Height="94" FontSize="22" Click="Button_Click"/>
        <Label x:Name="LabelX" Content="X :" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="46,1,0,0" FontSize="18" Height="37" Width="32" Grid.Row="1"/>
